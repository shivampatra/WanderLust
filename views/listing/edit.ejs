<%-layout('layouts/boilerplate')%>
<body>
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
     <h3 style="text-align: center;">Edit your listing</h3>

    <form method="post" action="/listings/<%= listing._id  %>?_method=PUT" class="needs-validation" novalidate>

        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" name="listing[title]" value="<%=listing.title  %>" class="form-control" required>
            <div class="invalid-feedback">
        Please choose a title
      </div>
        </div>


       
         <div class="mb-3">
               <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  cols="" rows="" class="form-control" required><%= listing.description %></textarea>
         </div>

        
        <div class="mb-3">
            <lable for="image" class="form-label">Image Link</lable>
            <input name="listing[image]" value="<%= listing.image %>" class="form-control" required>
        </div>
 
        <div class="row">
              <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]" type="number"  value="<%= listing.price %>" class="form-control" required>
        </div>
      
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control" required>
             <div class="invalid-feedback">
      Please select a valid country.
    </div>
        </div>
        </div>
       

    
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" required>
             <div class="invalid-feedback">
      Please select a valid location.
    </div>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>

    
        </div>
    </div>
</body>
